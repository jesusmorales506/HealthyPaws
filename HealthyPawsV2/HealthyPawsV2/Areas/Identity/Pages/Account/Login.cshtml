@page
@model LoginModel

@{
	Layout = "_LoginLayout";
	ViewData["Title"] = "Log in";
}

<div class="row justify-content-center">
	<div class="col-md-4">
		<section>
			<div class="card" style="background-color: rgba(255, 255, 255, 0.4); border: none; border-radius: 15px;">
				<div class="card-body">
					<form id="account" method="post" style="color: #B25A28;">
						<h2 class="text-center">Inicio de Sesión</h2>
						<hr />
						<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
						<div class="form-floating mb-3">
							<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
							<label asp-for="Input.Email" class="form-label"><b>Correo Electrónico</b></label>
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div class="form-floating mb-3">
							<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
							<label asp-for="Input.Password" class="form-label"><b>Contraseña</b></label>
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div class="text-center">
							<p>
								<a id="forgot-password" asp-page="./ForgotPassword" style="color: black;">¿Olvidaste la Contraseña?</a>
							</p>
						</div>
						<div>
							<button id="login-submit" type="submit" class="w-100 btn btn-lg" style="background-color: #B25A28; border-color: #B25A28; color: white;">Iniciar Sesión</button>
						</div>
						<br />
						<div class="checkbox mb-3 text-center">
							<label asp-for="Input.RememberMe" class="form-label" style="color: #B25A28;">
								<input class="form-check-input" asp-for="Input.RememberMe" />
								@Html.DisplayNameFor(m => m.Input.RememberMe)
							</label>
						</div>
					</form>
				</div>
			</div>
		</section>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
